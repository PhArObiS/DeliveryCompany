<!-- Animation set, containing both scale and alpha animations -->
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Scale animation, enlarges the logo from 50% to 100% of its size -->
    <scale
        android:duration="1500"
        android:fromXScale="0.5"
        android:fromYScale="0.5"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1.0"
        android:toYScale="1.0" />

    <!-- Alpha animation, fades the logo in from completely transparent to fully opaque -->
    <alpha
        android:duration="1500"
        android:fromAlpha="0.0"
        android:toAlpha="1.0" />
</set>
